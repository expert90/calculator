{
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "rootDir": "client/src/app",
    "outDir": "public/build/app",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  }
}
